<?xml version="1.0" ?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro">
  <macro name="cylinder_inertia" params="m r h">
    <inertia  ixx="${m*(3*r*r+h*h)/12}" ixy = "0" ixz = "0" iyy="${m*(3*r*r+h*h)/12}" iyz = "0" izz="${m*r*r/2}"/>
  </macro>
  <xacro:macro name="roller_macro" params="parent name xyz rpy">
    <link name="roller_${name}_rim_${parent}_link">
      <inertial>
        <origin xyz="0 0 0"/>
        <mass value="0.02"/>
        <xacro:cylinder_inertia m="0.02" r="0.005" h="0.03"/>
      </inertial>
      <visual>
        <geometry>
          <mesh filename="package://justina_description/stl/justina_base_roller.stl" scale="2 2 5"/>
	</geometry>
	<material name="roller_material">
          <color rgba="0.1 0.1 0.1 1"/>
        </material>
      </visual>
      <collision>
	<geometry>
	  <mesh filename="package://justina_description/stl/justina_base_roller.stl" scale="2 2 5"/>
	</geometry>
      </collision>
    </link>
    <joint name="roller_${name}_rim_${parent}_joint" type="continuous">
      <parent link="rim_${parent}_link"/>
      <child link="roller_${name}_rim_${parent}_link"/>
      <axis xyz="0 0 1"/>
      <origin xyz="${xyz}" rpy="${rpy}"/>
    </joint>
    <gazebo reference="roller_${name}_rim_${parent}_link">
      <material>Gazebo/Black</material>
      <selfCollide>false</selfCollide>
      <gravity>true</gravity>
    </gazebo>
  </xacro:macro>
</robot>
